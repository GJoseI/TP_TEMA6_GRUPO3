<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	<import resource="BeansUsuario.xml"/>
    <import resource="BeansEspecialidad.xml"/>
	
	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>
	
	<bean id="medico1" class="frgp.utn.edu.entidad.Medicos">
		<property name="legajo" value="1111"></property>
		<property name="nombre" value="Jose"></property>
		<property name="apellido" value="Jose"></property>
		<property name="sexo" value="M"></property>
		<property name="fechaNac">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="2003-04-22" />
			</bean>
		</property>
		<property name="diasLab" value="Lu-Vie"></property>
		<property name="HorarioLab" value="8hs-17hs"></property>
		<property name="direccion" value="Argentina 123"></property>
		<property name="localidad" value="Talar"></property>
		<property name="email" value="jose@gmail.com"></property>
		<property name="telefono" value="123456789"></property>
		<property name="estado" value="True"></property>
		<property name="especialidad" ref="especialidad1"></property>
		<property name="usuario" ref="usuario2"></property>
	</bean>	
	
	<bean id="medico2" class="frgp.utn.edu.entidad.Medicos">
		<property name="legajo" value="2222" />
		<property name="nombre" value="Juan" />
		<property name="apellido" value="Gomez" />
		<property name="sexo" value="M" />
		<property name="fechaNac">
			<bean factory-bean="dateFormat" factory-method="parse">
				<constructor-arg value="1995-08-15" />
			</bean>
		</property>
		<property name="diasLab" value="Lu-Sab" />
		<property name="HorarioLab" value="9hs-18hs" />
		<property name="direccion" value="Belgrano 456" />
		<property name="localidad" value="San Isidro" />
		<property name="email" value="ana.gomez@gmail.com" />
		<property name="telefono" value="987654321" />
		<property name="estado" value="true" />
		<property name="especialidad" ref="especialidad2" />
		<property name="usuario" ref="usuario3" />
	</bean>
</beans>
	